<!-- app/views/settings/edit.html.erb -->
<h1>Edit Settings</h1>
<%= form_with(model: @user, method: :patch, html: { multipart: true }) do |f| %>
  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :surname %>
    <%= f.text_field :surname %>
  </div>
  <div>
    <%= f.submit 'Save Settings' %>
  </div>
<% end %>
<%= link_to 'Back to Dashboard', root_path %>
